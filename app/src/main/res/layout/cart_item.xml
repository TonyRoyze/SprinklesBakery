<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white">

    <RelativeLayout
        android:id="@+id/cart_item_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/inner_cart_item_det"
            android:layout_width="170dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cake_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Vanilla Cup Cake"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cake_name"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="$ 2.00"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cart_item_det"
        android:fontFamily="@font/montserrat_medium"
        android:text="$ 2.00"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/btn_stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_total"
        android:background="@drawable/ic_btn"
        android:padding="15dp">

        <ImageView
            android:id="@+id/btn_stepper_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/btn_stepper_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/btn_stepper_add"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btn_stepper_remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/btn_stepper_text"
            android:src="@drawable/ic_remove" />

    </RelativeLayout>


</RelativeLayout>


